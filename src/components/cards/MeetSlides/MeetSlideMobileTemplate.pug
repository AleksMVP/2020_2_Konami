            h1(class='meet-slide-mobile__title') #{card.label.title}
            div(class='meet-slide-mobile__date-place-wrapper')
                span(class='meet-slide-mobile__place') #{card.city}, #{card.address}
                span(class='meet-slide-mobile__separator') â€¢
                span(class='meet-slide-mobile__date') #{dateStr}
